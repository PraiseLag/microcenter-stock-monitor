# =========================
# Feature toggles
# =========================

# Enable Discord alerts (1 = enabled, 0 = disabled)
ENABLE_DISCORD_ALERTS=1

# Enable Email alerts (1 = enabled, 0 = disabled)
ENABLE_EMAIL_ALERTS=1

# Enable alerts when NEW stock appears
ENABLE_NEW_STOCK_ALERTS=1

# Enable open box tracking logic
ENABLE_OPEN_BOX_TRACKING=1

# Enable alerts for open box items
ENABLE_OPEN_BOX_ALERTS=1


# =========================
# Email configs
# =========================

# Primary email address used by the bot
# Kept for backward compatibility with older logic
email=

# Email account password
# For Gmail, this MUST be an App Password
password=""

# Email address that will RECEIVE stock alerts
ALERT_EMAIL_TO=

# Email address that will SEND stock alerts
# Usually the same as ALERT_EMAIL_TO
ALERT_EMAIL_FROM=


# =========================
# Discord configs
# =========================

# Discord webhook URL where alerts and live status messages will be posted
DISCORD_WEBHOOK_URL=

# Optional Discord role ID to ping when an item goes in stock
# Leave empty if you do not want role pings
DISCORD_ROLE_ID=

# Display name for the Discord bot messages
DISCORD_USERNAME=StockSmart Bot

# Whether to show product images in Discord embeds
# 1 = enabled, 0 = disabled
DISCORD_SHOW_IMAGE=1

# Whether to include interactive buttons (like product links)
# 1 = enabled, 0 = disabled
DISCORD_BUTTONS=1

# Color used for Discord embed sidebars (decimal format)
DISCORD_EMBED_COLOR=3066993

# Delete Discord alert messages when items sell out again
# 1 = delete the original alert message
# 0 = keep the alert message
DELETE_DISCORD_ALERTS_ON_SELLOUT=0


# =========================
# Time configs
# =========================

# Timezone used for timestamps in logs, Discord, and emails
TIMEZONE=America/Chicago


# =========================
# Watchdog configs
# =========================

# How often watchdog checks if the main bot is still running (seconds)
WATCHDOG_INTERVAL_SECONDS=120

# How long the bot can go without activity before watchdog considers it stuck (seconds)
WATCHDOG_STALE_SECONDS=480
